<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="TEstPlugin\Command\ExampleCommand">
            <tag name="console.command"/>
        </service>

        <service id="TEstPlugin\ScheduledTask\ExampleTask">
            <tag name="shopware.scheduled.task"/>
        </service>

        <service id="TEstPlugin\Subscriber\MySubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="TEstPlugin\Storefront\Controller\ExampleController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="TEstPlugin\Core\Content\Example\SalesChannel\ExampleRoute">
            <argument type="service" id="product.repository"/>
        </service>

        <service id="TEstPlugin\Core\Content\Yes\YesDefinition">
            <tag name="shopware.entity.definition" entity="yes" />
        </service>

        <service id="TEstPlugin\Service\CustomFieldsInstaller">
            <argument type="service" id="custom_field_set.repository"/>
            <argument type="service" id="custom_field_set_relation.repository"/>
        </service>

    </services>
</container>